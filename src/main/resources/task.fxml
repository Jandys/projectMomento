<?xml version="1.0" encoding="UTF-8"?>

<?import cz.momento.DateTimePicker?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.261" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.momento.controllers.ControllerTask">
    <Label text="Vytvoření úkolu" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />

    <Label text="Pracovník: " GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
    <ComboBox fx:id="employee" maxWidth="100" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1" />

    <Label text="Čas od: " GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
    <DateTimePicker fx:id="timeFrom" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
   <!-- <TextField maxWidth="100" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2" /> -->

    <Label text="Čas do: " GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
    <DateTimePicker fx:id="timeTo" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="3" />
    <!--<TextField maxWidth="100" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="3" />-->

    <Label text="Priorita: " GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
    <ComboBox fx:id="priority" maxWidth="100" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4"/>

    <Button onMouseClicked="#createNewTask" text="Create Task" maxWidth="100" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="5"></Button>

    <Label fx:id="errorMessage" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="20.0" vgrow="SOMETIMES" />
    </rowConstraints>
</GridPane>
